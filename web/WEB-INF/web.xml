<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>iniciosesion</servlet-name>
        <servlet-class>servlet.iniciosesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrarusuario</servlet-name>
        <servlet-class>servlet.registrarusuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controler</servlet-name>
        <servlet-class>servlet.Controler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlerIMG</servlet-name>
        <servlet-class>servlet.ControlerIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verificacion</servlet-name>
        <servlet-class>servlet.verificacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>iniciosesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrarusuario</servlet-name>
        <url-pattern>/nuevousuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controler</servlet-name>
        <url-pattern>/Controler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlerIMG</servlet-name>
        <url-pattern>/ControlerIMG</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verificacion</servlet-name>
        <url-pattern>/verificacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
